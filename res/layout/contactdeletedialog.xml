<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/meetingadd_dialog"
        android:orientation="vertical"
        android:padding="0dp" >

        <!--<View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#67d5f4" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="要删除此联系人吗？"
                    android:gravity="center">

                </TextView>

            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3">

                <Button
                android:id="@+id/contact_del_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/contactcarddelpress_selector"
                android:text="删除"
                android:textColor="#f13e20"
                android:textSize="@dimen/x36" />

            </LinearLayout>



            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3">

                <Button
                 android:id="@+id/contact_cancel_btn"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_gravity="center"
                 android:background="@drawable/contactcarddelpress_selector"
                 android:text="取消"
                 android:textColor="#848586"
                 android:textSize="@dimen/x36" />

            </LinearLayout>
            

            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>