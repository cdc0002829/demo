<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/systembg"
    android:orientation="vertical">
    <include layout="@layout/titlebar"></include>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/auditingimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y110"
            app:srcCompat="@drawable/auditingactivity_image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/x88"
            android:text="审核中"
            android:textSize="@dimen/x36"
            android:textColor="#2d2d2d"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/y40"
        android:text="您的认证资料已提交成功，预计一个工作日完成审核"
        android:textSize="@dimen/x28"
        android:textColor="#8d8d8d"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/y20"
        android:text="请您耐心等待！"
        android:textSize="@dimen/x28"
        android:textColor="#8d8d8d"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:autoLink="phone"
        android:id="@+id/auding_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/x24"
        android:textColor="#b5b5b5"
        android:layout_marginBottom="@dimen/y76"/>


</LinearLayout>
