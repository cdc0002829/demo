<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/systembg"
    android:orientation="vertical" >

    <include layout="@layout/titlebar"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#d9d9d9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="#ffffff" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x24"
                android:text="国家"
                android:textColor="#2d2d2d"
                android:textSize="@dimen/x32" />


        <View
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/y60"
            android:background="#d9d9d9"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x85"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:text="中国+86"
            android:textColor="#2d2d2d"
            android:textSize="@dimen/x32" />
    </LinearLayout>



        <View
            android:layout_width="@dimen/x696"
            android:layout_height="@dimen/y1"
            android:background="#d9d9d9"
            android:layout_marginLeft="@dimen/x24"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="#ffffff" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x24"
                android:text="手机号"
                android:textColor="#2d2d2d"
                android:textSize="@dimen/x32" />

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/y60"
            android:layout_gravity="center"
            android:background="#d9d9d9"
            android:layout_marginLeft="@dimen/x52"/>

        <EditText
            android:id="@+id/register_num_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:background="@null"
            android:digits="1234567890"
            android:hint="输入手机号码"
            android:textColor="#2d2d2d"
            android:textSize="@dimen/x32"
            android:maxLength="11"
            android:inputType="number"
            android:textColorHint="#8d8d8d" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center" >

        <View
            android:layout_width="@dimen/x696"
            android:layout_height="@dimen/y1"
            android:background="#d9d9d9"
            android:layout_marginLeft="@dimen/x24"/>
        

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="#ffffff" >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x24"
                android:text="登录密码"
                android:textCursorDrawable="@null"
                android:textColor="#2d2d2d"
                android:textSize="@dimen/x32"/>


        <View
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/y60"
            android:layout_gravity="center"
            android:background="#d9d9d9"
            android:layout_marginLeft="@dimen/x20"/>

        <EditText
            android:id="@+id/register_pwd_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:background="@null"
            android:digits="1234567890"
            android:hint="设置登录密码（6位数字）"
            android:textColor="#2d2d2d"
            android:maxLength="6"
            android:textSize="@dimen/x32"
            android:inputType="number"
            android:password="true"
            android:textColorHint="#8d8d8d" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="#d9d9d9" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/y40"
        android:gravity="center_vertical">

        <CheckBox
            android:checked="false"
            android:id="@+id/agreement_cb"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/y30"
            android:button="@null"
            android:background="@drawable/checkbox_style"
            android:layout_marginLeft="@dimen/x34"
            />


        <TextView
            android:layout_marginLeft="@dimen/x14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_read"
            android:textSize="@dimen/x24"
            android:textColor="#8d8d8d"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_service_button"
            android:id="@+id/phone_register_webview"
            android:textSize="@dimen/x24"
            android:textColor="@color/forgetpwd"/>

    </LinearLayout>

    <Button
        android:id="@+id/register_next_btn"
        android:layout_width="@dimen/x670"
        android:layout_height="@dimen/y94"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y57"
        android:background="@drawable/button_selector"
        android:focusable="true"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="@dimen/x34" />

    <TextView
        android:id="@+id/phone_to_emailtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y24"
        android:layout_gravity="center"
        android:text="邮箱注册"
        android:textColor="@color/forgetpwd"
        android:textSize="@dimen/x24"/>

</LinearLayout>