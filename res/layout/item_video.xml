<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/x10">

    <android.support.v7.widget.CardView
        app:contentPaddingBottom="-20dp"
        app:contentPaddingTop="-20dp"
        app:cardUseCompatPadding="false"
        android:id="@+id/item_cardview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y430"
        android:clickable="true"
        app:cardCornerRadius="3dp"
        app:cardElevation="0px"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/collection_operator"
                layout="@layout/collection_operator_layout" />

            <RelativeLayout
                android:id="@+id/collection_vedio_rl"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y336"
                android:layout_below="@id/collection_operator">

                <RelativeLayout
                    android:layout_width="@dimen/x490"
                    android:layout_height="@dimen/y306"
                    android:layout_marginTop="@dimen/y30">

                    <ImageView
                        android:background="@drawable/hillbackground"
                        android:id="@+id/collection_vedio_view"
                        android:layout_width="@dimen/x460"
                        android:layout_height="@dimen/y276"
                        android:scaleType="centerCrop"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:src="@drawable/video_icon" />

                    <TextView
                       android:id="@+id/time_tv"
                        android:textSize="@dimen/x26"
                        android:textColor="@color/chat_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/y50"
                        android:layout_marginRight="@dimen/x30"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:text="fdhgahr" />

                </RelativeLayout>


            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>