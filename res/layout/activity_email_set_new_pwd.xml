<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/systembg"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#d9d9d9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/email_set_new_ped_left"
            android:layout_width="@dimen/x100"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x28">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="验证码"
                android:textColor="#2d2d2d"
                android:textSize="@dimen/x32" />
        </LinearLayout>


        <View
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/y60"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x42"
            android:background="#d9d9d9" />

        <LinearLayout
            android:layout_width="@dimen/x200"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20">

            <EditText
                android:id="@+id/email_set_new_ped_checkcode_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="#2d2d2d"
                android:textColorHint="#8d8d8d"
                android:textSize="@dimen/x32" />
        </LinearLayout>


        <View
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/y60"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x90"
            android:background="#d9d9d9" />


        <TextView
            android:id="@+id/email_set_new_pwd_getcheckcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:background="@null"
            android:onClick="onButtonClick"
            android:text="重新获取"
            android:textColor="#f76626"
            android:textSize="@dimen/x28" />

        <TextView
            android:id="@+id/email_set_new_pwd_checkcodetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="（20）"
            android:textColor="#8d8d8d"
            android:textSize="@dimen/x28"
            android:visibility="visible" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#d9d9d9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="@dimen/x100"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x28">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="新密码"
                android:textColor="#2d2d2d"
                android:textSize="@dimen/x32" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/y60"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x42"
            android:background="#d9d9d9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20">

            <EditText
                android:id="@+id/email_set_new_ped_newpwd_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="设置登录密码（6位数字组成）"
                android:inputType="number"
                android:maxLength="6"
                android:password="true"
                android:textColor="#2d2d2d"
                android:textColorHint="#8d8d8d"
                android:textSize="@dimen/x32" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#d9d9d9" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x28"
        android:layout_marginTop="@dimen/y40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/emailsetnewpwdtextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码已发往您的电子邮箱:"
            android:textColor="#8d8d8d"
            android:textSize="@dimen/x24" />

        <TextView
            android:id="@+id/emailsetnewpwdtextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="liuying@butel.com"
            android:textColor="#3aabcd"
            android:textSize="@dimen/x24" />
    </LinearLayout>

    <TextView
        android:id="@+id/emailsetnewpwdtextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x28"
        android:text="请及时获取验证码进行重置密码！"
        android:textColor="#8d8d8d"
        android:textSize="@dimen/x24" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="#e3e4e5" />

    <Button
        android:id="@+id/emailsetnewpwd_next_btn"
        android:layout_width="@dimen/x670"
        android:layout_height="@dimen/y94"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/x27"
        android:background="@drawable/button_selector"
        android:focusable="true"
        android:text="完成"
        android:textColor="#ffffff"
        android:textSize="@dimen/x34" />

</LinearLayout>
